<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="cn.lds.ui.fragment.DetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/main_top_bg"
                />
            <cn.lds.widget.pullToRefresh.PullToRefreshScrollView
                android:id="@+id/pull_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="178dp">

                        <TextView
                            android:id="@+id/main_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ffa0b5d5"
                            android:textSize="10sp"/>

                        <ImageView
                            android:id="@+id/iv_car"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/car_detail_iv"
                            />
                        <LinearLayout
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="60dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_location_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/car_detail_location"/>

                            <TextView
                                android:id="@+id/main_location_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="#ffabb3c8"
                                android:textSize="13sp"
                                android:maxLines="2"
                                android:maxLength="32"
                                android:ellipsize="end"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="99dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/car_detail_group_b">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="27dp"
                                android:src="@drawable/car_detail_km"/>

                            <LinearLayout
                                android:id="@+id/car_detail_km_llyt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="14dp"
                                android:layout_marginTop="25dp"
                                android:orientation="horizontal">

                                <cn.lds.ui.view.MyTextView
                                    android:id="@+id/car_detail_km"
                                    style="@style/main_center_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="无数据"/>

                                <cn.lds.ui.view.MyTextView
                                    android:id="@+id/car_detail_km_hint"
                                    style="@style/main_center_text_hint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="km"
                                    android:visibility="gone"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/car_detail_km_llyt"
                                android:layout_marginRight="14dp"
                                android:text="续航里程"
                                android:textColor="#99ffffff"
                                android:textSize="12sp"
                                />

                        </RelativeLayout>

                        <View
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/car_detail_group_a">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="26dp"
                                android:layout_marginTop="27dp">
                                <ImageView
                                    android:id="@+id/iv_electric_oil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/car_detail_oil"/>
                                <ImageView
                                    android:id="@+id/iv_plug"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/bg_plug"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone"/>
                            </RelativeLayout>


                            <LinearLayout
                                android:id="@+id/car_detail_oil_llyt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="28dp"
                                android:layout_marginTop="24dp"
                                android:orientation="horizontal">

                                <cn.lds.ui.view.MyTextView
                                    android:id="@+id/car_detail_oil"
                                    style="@style/main_center_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="无数据"/>

                                <cn.lds.ui.view.MyTextView
                                    android:id="@+id/car_detail_oil_hint"
                                    style="@style/main_center_text_hint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="％"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/car_detail_oil_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/car_detail_oil_llyt"
                                android:layout_marginRight="28dp"
                                android:text="@string/enerage_text_ev"
                                android:textColor="#99ffffff"
                                android:textSize="12dp"
                                />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/car_detail_goup_bg"
                            android:minWidth="152dp"
                            android:id="@+id/car_info_config_left"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:id="@+id/car_detail_total_km_llyt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <cn.lds.ui.view.MyTextView
                                        android:id="@+id/car_detail_total_km"
                                        style="@style/main_center_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="无数据"
                                        android:textColor="@color/white"
                                        />

                                    <cn.lds.ui.view.MyTextView
                                        android:id="@+id/car_detail_total_km_hint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="km"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:visibility="gone"
                                        />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/left_tab_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="总里程"
                                    android:textColor="#99ffffff"
                                    android:textSize="10sp"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_right"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <View
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:id="@+id/car_info_config_right"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/car_detail_goup_bg"
                            android:minWidth="152dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:id="@+id/car_detail_aver_llyt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <cn.lds.ui.view.MyTextView
                                        android:id="@+id/car_detail_aver"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="无数据"
                                        android:textColor="@color/white"
                                        style="@style/main_center_text"
                                        />

                                    <cn.lds.ui.view.MyTextView
                                        android:id="@+id/car_detail_aver_hint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/aver_hint_ev"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:visibility="gone"
                                        />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/car_detail_aver_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/aver_text_ev"
                                    android:textColor="#99ffffff"
                                    android:textSize="10sp"
                                    />
                            </LinearLayout>


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_right"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/car_detail_service"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="我的服务"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/car_detail_recommend"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginLeft="13dp"
                            android:text="为你推荐"
                            android:textColor="#99ffffff"
                            android:textSize="11sp"
                            />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/car_detail_others"
                        android:layout_width="match_parent"
                        android:layout_height="92dp"
                        android:layout_marginTop="8dp"
                        android:overScrollMode="never"/>
                </LinearLayout>
            </cn.lds.widget.pullToRefresh.PullToRefreshScrollView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_contro_car_bg"
                    android:layout_below="@+id/top_bar"
                    android:id="@+id/rl_control_waite"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_control_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/loading_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_control_load"
                        android:layout_toRightOf="@id/tv_control_status"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_contro_car_bg"
                    android:layout_below="@+id/top_bar"
                    android:id="@+id/rl_control_success"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/iv_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_confirm_green"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/tv_control_success_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/iv_success"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="确定"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="8dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_toLeftOf="@+id/tv_confirm"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_control_car_failture"
                    android:layout_below="@+id/top_bar"
                    android:id="@+id/rl_control_falture"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/iv_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cancel_red"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:id="@+id/tv_control_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/iv_remove"
                        android:text="鸣笛闪灯启动失败"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/see_see"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="查看"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="8dp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_toLeftOf="@+id/see_see"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>
                <!--首页fragmeng标题栏-->
                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:id="@+id/top_bar"
                    tools:showIn="@layout/fragment_car_detail">

                    <ImageView
                        android:id="@+id/menu_icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/main_top_icon"/>

                    <LinearLayout
                        android:id="@+id/car_lisence_no_llyt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/car_lisence_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="false"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:id="@+id/ll_car_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/car_lisence_no_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:drawablePadding="4dp"/>

                            <ImageView
                                android:id="@+id/iv_top_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/main_top_down_btn"/>
                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/menu_notices"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/main_top_notices"/>
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
