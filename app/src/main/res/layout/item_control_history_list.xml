<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF202237"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_history_light"
            android:layout_centerVertical="true"
            android:id="@+id/iv_status"
            android:layout_marginLeft="19dp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启车门"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_status"
            android:textColor="#B2B7D8"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_type"
            android:text="操作成功"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/iv_right_row"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:12:23"
            android:textColor="#B2B7D8"
            android:textSize="12sp"
            android:layout_alignLeft="@+id/tv_type"
            android:layout_alignStart="@+id/tv_type"
            android:layout_below="@+id/tv_type"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:id="@+id/iv_right_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_history_right_row"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:visibility="visible"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#FF30314B"
            android:layout_below="@+id/tv_time"
            android:layout_alignLeft="@+id/tv_type"/>
    </RelativeLayout>



</RelativeLayout>

